// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String            @id @default(cuid())
  name         String?
  username     String?           @unique
  passwordHash String?           @map("password_hash")
  googleId     String?           @unique @map("google_id")
  email        String?
  phone        String?
  isAdmin      Boolean           @default(false) @map("is_admin")
  createdAt    DateTime          @default(now()) @map("created_at")
  updatedAt    DateTime          @default(now()) @updatedAt @map("updated_at")
  sessions     Session[]
  addresses    DeliveryAddress[]
  orders       Order[]
  roles        UserRole[]
  cart         Cart?
  savedProducts SavedProduct[]

  @@index([googleId])
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Product {
  id                    String   @id @default(cuid())
  title                 String
  description           String?  @db.Text
  price                 Float
  imageUrl              String?  @map("image_url")
  imageData             Bytes?   @map("image_data") @db.ByteA
  imageMimeType         String?  @map("image_mime_type")
  category              String?
  brand                 String?
  sku                   String?  @map("sku")
  stockQuantity         Int?     @map("stock_quantity")
  weight                Float?
  dimensionsWidth       Float?   @map("dimensions_width")
  dimensionsHeight      Float?   @map("dimensions_height")
  dimensionsDepth       Float?   @map("dimensions_depth")
  color                 String?
  material              String?
  condition             String?
  tags                  String?  @db.Text
  shippingCost          Float?   @map("shipping_cost")
  estimatedShippingDays Int?     @map("estimated_shipping_days")
  returnPolicy          String?  @map("return_policy") @db.Text
  warranty              String?
  specifications        String?  @db.Text
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  catalogues CatalogueProduct[]
  savedBy   SavedProduct[]
  coupons   CouponProduct[]

  @@index([createdAt])
  @@map("products")
}

model Logo {
  id        String   @id @default(cuid())
  imageData Bytes    @map("image_data") @db.ByteA
  mimeType  String   @map("mime_type")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("logos")
}

model Order {
  id              String      @id @default(cuid())
  userId          String?     @map("user_id")
  email           String
  shippingName    String      @map("shipping_name")
  shippingAddress String      @map("shipping_address")
  shippingCity    String      @map("shipping_city")
  shippingState   String?     @map("shipping_state")
  shippingZip     String      @map("shipping_zip")
  shippingCountry String      @map("shipping_country")
  totalAmount     Float       @map("total_amount")
  status          String      @default("pending") // pending, paid, shipped, delivered, cancelled
  braintreeTxId   String?     @map("braintree_tx_id")
  couponId        String?     @map("coupon_id")
  couponCode      String?     @map("coupon_code")
  discountAmount  Float?      @map("discount_amount")
  items           OrderItem[]
  coupon          Coupon?     @relation(fields: [couponId], references: [id], onDelete: SetNull)
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")
  user            User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([createdAt])
  @@index([userId])
  @@index([couponId])
  @@map("orders")
}

model OrderItem {
  id           String @id @default(cuid())
  orderId      String @map("order_id")
  productId    String @map("product_id")
  productTitle String @map("product_title")
  productPrice Float  @map("product_price")
  quantity     Int
  order        Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Banner {
  id                   String   @id @default(cuid())
  title                String?
  imageUrl             String?  @map("image_url")
  imageData            Bytes?   @map("image_data") @db.ByteA
  imageMimeType        String?  @map("image_mime_type")
  mobileImageUrl       String?  @map("mobile_image_url")
  mobileImageData      Bytes?   @map("mobile_image_data") @db.ByteA
  mobileImageMimeType  String?  @map("mobile_image_mime_type")
  desktopImageUrl      String?  @map("desktop_image_url")
  desktopImageData     Bytes?   @map("desktop_image_data") @db.ByteA
  desktopImageMimeType String?  @map("desktop_image_mime_type")
  linkUrl              String?  @map("link_url")
  order                Int      @default(0)
  isActive             Boolean  @default(true) @map("is_active")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  @@index([isActive, order])
  @@map("banners")
}

model Catalogue {
  id            String   @id @default(cuid())
  title         String
  slug          String?  @unique
  description   String?
  content       String?  @db.Text
  imageUrl      String?  @map("image_url")
  imageData     Bytes?   @map("image_data") @db.ByteA
  imageMimeType String?  @map("image_mime_type")
  linkUrl       String?  @map("link_url")
  order         Int      @default(0)
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  products CatalogueProduct[]

  @@index([isActive, order])
  @@map("catalogues")
}

model CatalogueProduct {
  catalogueId String    @map("catalogue_id")
  productId   String    @map("product_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  catalogue   Catalogue @relation(fields: [catalogueId], references: [id], onDelete: Cascade)
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([catalogueId, productId])
  @@index([productId])
  @@map("catalogue_products")
}

model DeliveryAddress {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  label     String? // e.g., "Home", "Work", "Office"
  name      String
  address   String
  city      String
  state     String?
  zip       String
  country   String   @default("US")
  phone     String?
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("delivery_addresses")
}

model Role {
  id          String           @id @default(cuid())
  name        String           @unique
  description String?
  isSystem    Boolean          @default(false) @map("is_system")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")
  permissions RolePermission[]
  userRoles   UserRole[]

  @@map("roles")
}

model Permission {
  id              String           @id @default(cuid())
  key             String           @unique
  name            String
  description     String?
  category        String? // e.g., "products", "orders", "users", "content"
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  rolePermissions RolePermission[]

  @@map("permissions")
}

model RolePermission {
  id           String     @id @default(cuid())
  roleId       String     @map("role_id")
  permissionId String     @map("permission_id")
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now()) @map("created_at")

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  roleId    String   @map("role_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, roleId])
  @@map("user_roles")
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique @map("user_id")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]

  @@map("carts")
}

model CartItem {
  id            String   @id @default(cuid())
  cartId        String   @map("cart_id")
  productId     String   @map("product_id")
  productTitle  String   @map("product_title")
  productPrice  Float    @map("product_price")
  imageUrl      String?  @map("image_url")
  quantity      Int
  stockQuantity Int?     @map("stock_quantity")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  cart          Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId])
  @@index([cartId])
  @@map("cart_items")
}

model SavedProduct {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  productId String   @map("product_id")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
  @@map("saved_products")
}

model Coupon {
  id              String         @id @default(cuid())
  code            String         @unique
  name            String
  description     String?        @db.Text
  discountType    String         @map("discount_type") // "percentage" or "fixed"
  discountValue   Float          @map("discount_value") // Percentage (0-100) or fixed amount
  minPurchaseAmount Float?       @map("min_purchase_amount")
  maxDiscountAmount Float?       @map("max_discount_amount") // For percentage coupons
  usageLimit      Int?           @map("usage_limit") // Total usage limit
  usageCount      Int            @default(0) @map("usage_count")
  userUsageLimit  Int?           @default(1) @map("user_usage_limit") // Per user limit
  validFrom       DateTime       @map("valid_from")
  validUntil      DateTime       @map("valid_until")
  isActive        Boolean        @default(true) @map("is_active")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")
  products        CouponProduct[]
  orders          Order[]

  @@index([code])
  @@index([isActive])
  @@index([validFrom, validUntil])
  @@map("coupons")
}

model CouponProduct {
  couponId  String   @map("coupon_id")
  productId String   @map("product_id")
  createdAt DateTime @default(now()) @map("created_at")
  coupon    Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([couponId, productId])
  @@index([productId])
  @@map("coupon_products")
}
